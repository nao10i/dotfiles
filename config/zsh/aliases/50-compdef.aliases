# Optimized compdef with alias mapping
declare -A cmd_aliases=(
    [docker]=d
    [eza]=e
    [git]=g
    [nvim]=n
    [python3]=py
    [rg]=r
    [systemctl]=sc
    [tmux]=t
    [xargs]=x
    [zellij]=zj
)

for cmd in "${(@k)cmd_aliases}"; do
    alias_name=${cmd_aliases[$cmd]}
    if command -v $cmd &>/dev/null; then
        compdef "$alias_name"=$cmd
    fi
done

